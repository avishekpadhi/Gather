<div id="<%= dom_id interest %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= interest.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Experience:</strong>
    <%= interest.experience %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">User:</strong>
    <%= interest.user_id %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this interest", interest, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this interest', edit_interest_path(interest), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
