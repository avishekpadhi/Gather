<div class="mx-auto  flex flex-col w-screen items-center justify-center ">
  <div class="ml-10 bg-slate-100 rounded my-10 pb-5">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render @post %>

    <% if @post.user == current_user %>

    <div class="inline  mx-auto flex mt-3 w-96">

      <%= link_to 'Edit this post', edit_post_path(@post), class: "mt-2 rounded py-2 px-3 bg-gray-100  font-medium  w-40 h-12 flex items-center justify-center border border-black hover:scale-95 duration-300 hover:bg-blue-600 hover:text-white hover:border-none" %>
      <%= button_to 'Destroy this post', post_path(@post), method: :delete, class: "mt-2 rounded py-2 px-3 bg-gray-100 font-medium ml-2 w-40 h-12 flex items-center justify-center border border-black hover:scale-95 duration-300 hover:bg-red-600 hover:text-white hover:border-none" %>
      
    </div>
    <% end %>
  
  

<div class="ml-24"><%= render "comments/formforpost", comment: @comment%></div>
                <%= turbo_frame_tag "post_comments_#{@post.id}" do %>
                <div class=" overflow-y-scroll h-fit min-h-fit max-h-40 mt-6 ml-20 mx-auto w-80 pb-20">
                    <% @post.comments.each do |comment|%>
                        <%= render "comments/comment", comment: comment%>
                    <% end %>
                </div><% end %></div>





