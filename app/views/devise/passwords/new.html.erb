<div class="flex flex-col items-center justify-center w-screen h-screen"><h2 class="font-bold text-2xl mb-5">Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field w-96 ">
    <%= f.label :email,class:"font-bold" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email",class:" w-full" %>
  </div>

  <div class="actions mt-4 ">
    <%= f.submit "Send me reset password instructions",class:"border border-black py-2 px-5 rounded-md hover:bg-blue-600 hover:text-white hover:scale-90 duration-300" %>
  </div>
<% end %>

<%= render "devise/shared/links" %></div>

